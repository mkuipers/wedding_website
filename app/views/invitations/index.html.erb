<h1>Listing invitations</h1>

<table>
  <tr>
    <th>Address</th>
    <th>Song suggestion</th>
    <th>Attending</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @invitations.each do |invitation| %>
  <tr>
    <td><%= invitation.address %></td>
    <td><%= invitation.song_suggestion %></td>
    <td><%= invitation.attending %></td>
    <td><%= link_to 'Show', invitation %></td>
    <td><%= link_to 'Edit', edit_invitation_path(invitation) %></td>
    <td><%= link_to 'Destroy', invitation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

