<!DOCTYPE html>

%html{ :lang => 'en' }
  %head
    =render 'layouts/head'
  %body.plain
    #page
      #header
        =link_to root_path do 
          = image_tag 'header_image.png', :alt => 'IN HOLY MATRIMONY'
      #navigation
        %ul 
          %li
            = link_to '/hotels', :class => 'navitem' do
              = image_tag("suitcase1.png", :class => 'placeholder', :height => '32px')
              = image_tag("feet.png", :class => 'mouseover', :height => '32px')
              %br
              %span.navitemtext HOTELS
          %li
            = link_to '/schedule', :class => 'navitem' do
              = image_tag("suitcase1.png", :class => 'placeholder', :height => '32px')
              = image_tag("feet.png", :class => 'mouseover', :height => '32px')
              %br
              %span.navitemtext SCHEDULE

          %li 
            .navitem= link_to 'DIRECTIONS', '/directions'
          %li
            .navitem= link_to 'RSVP', '/directions'
          %li
            .navitem= link_to 'WEDDING REGISTRY', '/registry'
      #content 
        = render :partial => 'layouts/flash', :locals => { :flash => flash }
        = yield
      
      #footer
        %ul
          %li= 'Thanks to Grace for Graphic design'
          %li= 'Website created by Max Kuipers'

